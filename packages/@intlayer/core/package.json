{
  "name": "@intlayer/core",
  "version": "2.0.13",
  "private": false,
  "description": "IntLayer - Layer of abstraction between the business logic and the data access layer. Manage internationalization in a simple way, through TypeScript, JavaScript or JSON declaration file.",
  "keywords": [
    "intlayer",
    "layer",
    "abstraction",
    "data",
    "internationalization",
    "i18n",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf ./dist",
    "dev": "vite build --watch",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "process-files": "ts-node src/transpiler/processFilesCLI.ts --dir $npm_config_dir --extension $npm_config_extension --no-node-snapshot",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@intlayer/config": "workspace:^",
    "chokidar": "^4.0.1"
  },
  "devDependencies": {
    "@intlayer/backend": "workspace:^",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@utils/eslint-config": "workspace:^",
    "@utils/ts-config": "workspace:^",
    "eslint": "^9.11.1",
    "prettier": "3.3.3",
    "react": "^18.3.1",
    "rimraf": "5.0.5",
    "rollup-preserve-directives": "^1.1.2",
    "typescript": "^5.5.2",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^2.1.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "bug": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  }
}
